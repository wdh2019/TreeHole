<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_home_release"
        android:layout_width="match_parent"
        android:hint="请输入发布内容"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/area"
        android:elevation="3dp"
        android:enabled="true"
        android:gravity="top"
        android:minLines="8"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/edit_home_release_creator"
        android:hint="请输入昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/edit_home_release"
        android:background="@drawable/area"
        android:elevation="3dp"
        android:enabled="true"
        android:gravity="top"
        android:minLines="1"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/submit_edit_home_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_home_release_creator"
        android:layout_alignRight="@+id/edit_home_release"
        android:elevation="3dp"
        android:text="发布"/>
</RelativeLayout>