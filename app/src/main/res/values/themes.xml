<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreeHole" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!-- 应用的主要色调，actionBar默认使用的颜色， Toolbar导航栏的底色 -->
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item> <!-- 应用的主要文字颜色，如 actionBar 的标题文字 -->
        <item name="android:textColor">@color/black</item> <!-- 默认 Button, TextView 的文字颜色 -->
        <item name="editTextColor">@color/navy_light</item> <!-- 默认 EditView 输入框字体的颜色 -->
        <item name="colorAccent">@color/red</item> <!-- 一般控件的选中颜色，如 CheckBox, RadioButton, SwitchCompat, ProcessBar... -->
    </style>

    <style name="Theme.TreeHole.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TreeHole.AppBarOverlay" parent="Theme.MaterialComponents.Light" />

    <style name="Theme.TreeHole.PopupOverlay" parent="Theme.MaterialComponents.Light" />
</resources>